generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id  String  @id @default(cuid())
  email String  @unique
  name  String
  verify  Verify[]
}
model Verify{
  id String @id @default(cuid())
  email String
  mobilenumber  String
  verify  Boolean?
  user  User  @relation(fields: [email], references: [email])
}
model Doctor{
  id String @id @default(cuid())
  name String
  email String @unique
  spaclist  String
  aderess String
  startTime DateTime
  endTime DateTime
  limit  Limit[]
}
model Limit{
  id String @id @default(cuid())
  email String @unique
  startTime DateTime
  endTime   DateTime
  limit Int
  patient Int
  doctor Doctor @relation(fields: [email], references: [email])
}

model Appoitment{
  id String @id @default(cuid())
  userEmail String
  doctorEmail String
  Date  DateTime
  status  AppoitmentStatus
}
enum AppoitmentStatus{
  PENDING
  COMPLETEDsd
}